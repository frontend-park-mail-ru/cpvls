<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="game__menu-wrapper game__menu-wrapper_main">
		<div class="game__menu">
			<ul class="menu">
				<form class="menu__form js-form" action="" novalidate="novalidate" autocomplete="off">
					<li class="menu__element">
						<input class="menu__item menu__item_input js-focus" name="login" type="text" required="required" maxlength="20" placeholder="LOGIN" />
					</li>
					<li class="menu__element">
						<input class="menu__item menu__item_input js-focus" name="password" type="password" required="required" maxlength="10" placeholder="PASSWORD" />
					</li>
					<li class="menu__element"><button class="menu__item menu__item_submit js-focus" type="submit">SIGN IN</button></li>
					<li class="menu__element"><a class="menu__item js-focus js-back" href="#main">BACK</a></li>
				</form>
			</ul>
		</div>
	</div>
</fest:template>
