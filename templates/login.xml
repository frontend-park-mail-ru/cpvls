<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="content__game-menu content__game-menu_main">
		<div class="game-menu">
			<ul class="game-menu__nav">
				<form class="game-menu__form" action="" novalidate="novalidate">
					<li class="game-menu__nav-element">
						<input class="game-menu__nav-item game-menu__nav-item_input js-focus" name="login" type="email" required="required" maxlength="20" placeholder="LOGIN" />
					</li>
					<li class="game-menu__nav-element">
						<input class="game-menu__nav-item game-menu__nav-item_input js-focus" name="password" type="password" required="required" maxlength="10" placeholder="PASSWORD" />
					</li>
					<li class="game-menu__nav-element"><button class="game-menu__nav-item game-menu__nav-submit js-focus" type="submit">SIGN IN</button></li>
					<li class="game-menu__nav-element"><a class="game-menu__nav-item js-focus js-back" href="#main">BACK</a></li>
				</form>
			</ul>
		</div>
	</div>
</fest:template>
