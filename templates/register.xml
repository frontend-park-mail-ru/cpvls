<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="content__game-menu content__game-menu_register">
		<div class="game-menu">
			<ul class="game-menu__nav">
				<form class="game-menu__form" action="">
					<li class="game-menu__nav-element">
						<input class="game-menu__nav-item game-menu__nav-item_input js-focus" name="login" type="text" required="required" maxlength="20" placeholder="LOGIN"/>
					</li>
					<li class="game-menu__nav-element">
						<input class="game-menu__nav-item game-menu__nav-item_input js-focus" name="email" type="email" required="required" maxlength="20" placeholder="E-MAIL"/>
					</li>
					<li class="game-menu__nav-element">
						<input class="game-menu__nav-item game-menu__nav-item_input js-focus" name="password" type="password" required="required" maxlength="10" placeholder="PASSWORD"/>
					</li>
					<li class="game-menu__nav-element">
						<div class="game-menu__nav-avatar">
							<div class="nav-avatar">
								<div class="nav-avatar__icons">
									<i class="fa fa-trash-o nav-avatar__delete nav-avatar__delete_invisible js-delete-avatar" title="Delete this pic!"></i>
									<i class="fa fa-camera nav-avatar__camera js-camera" title="Take a pic now!"></i>
								</div>
								<div class="nav-avatar__preview js-preview"></div>
							</div>
						</div>
					</li>
					<li class="game-menu__nav-element">
						<a class="game-menu__nav-item game-menu__nav-shotter js-focus js-shotter" href="#">SHOTTER</a>
					</li>
					<li class="game-menu__nav-element">
						<button class="game-menu__nav-item game-menu__nav-submit js-focus" type="submit">REGISTER</button>
					</li>
					<li class="game-menu__nav-element">
						<a class="game-menu__nav-item js-focus js-back" href="#main">BACK</a>
					</li>
				</form>
			</ul>
		</div>
	</div>
</fest:template>
