<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="content__game-main content__game-main_visible">
        <div class="content__game-menu">
            <div class="game-menu game-menu_scoreboard">
                <div class="game-menu__title">
                    <h3 class="game-menu__title-text">TOP KEK</h3>
                </div>
                <div class="game-menu__scoreboard">
                    <div class="scoreboard-item scoreboard-item_captions">
                        <span class="scoreboard-player">PLAYER</span>
                        <span class="scoreboard-score">SCORE</span>
                    </div>
                    <fest:for iterate="data.scores" index="i" value="score">
                        <div class="scoreboard-item">
                            <span class="scoreboard-player"><fest:value>score.name</fest:value></span>
                            <span class="scoreboard-score"><fest:value>score.score</fest:value></span>
                        </div>
                    </fest:for>
                </div>
                <ul class="game-menu__nav">
                    <li class="game-menu__nav-element"><a id="main" class="game-menu__nav-item js-back" href="#main">BACK</a></li>
                </ul>
            </div>
        </div>
    </div>
</fest:template>
