<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="content__game-main content__game-main_visible kek">
        <div class="content__game-menu">
            <div class="game-menu game-menu_scoreboard">
                <div class="game-menu__title">
                    <h3 class="game-menu__title-text">TOP KEK</h3>
                </div>
                <div class="game-menu__scoreboard">
                    <div class="scoreboard__item scoreboard__item_captions">
                        <span class="scoreboard__player">PLAYER</span>
                        <span class="scoreboard__score">SCORE</span>
                    </div>
                    <fest:for iterate="data.scores" index="i" value="score">
                        <div class="scoreboard__item">
                            <p class="scoreboard__player"><span class="scoreboard__player-name {score.name.length > 11 ? 'scoreboard__player-name_scroll': 'no'}"><fest:value>score.name</fest:value></span></p>
                            <span class="scoreboard__score"><fest:value>score.score</fest:value></span>
                        </div>
                    </fest:for>
                </div>
                <ul class="game-menu__nav">
                    <li class="game-menu__nav-element"><a id="main" class="game-menu__nav-item js-focus js-back" href="#main">BACK</a></li>
                </ul>
            </div>
        </div>
    </div>
</fest:template>
